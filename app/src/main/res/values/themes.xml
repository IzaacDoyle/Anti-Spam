<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Antispam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueish</item>
        <item name="colorPrimaryVariant">@color/drawer</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.Antispam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Antispam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Antispam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UItheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/blueish</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/blueish</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor" >@color/white</item>
    </style>

    <style name="settingswitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blueish</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/blueishTransp
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/blueishTransp
        </item>
    </style>
</resources>