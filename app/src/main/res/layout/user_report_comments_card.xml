<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>
        <variable
            name="communitymodel"
            type="com.ab.anti_spam.models.CommunityBlockingCommentsModel" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="24dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/user_report_comment_card"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/user"
                />

            <TextView
                android:id="@+id/risk_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userIcon"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                android:text="@{`Warning: ` +communitymodel.risk_Level}"
                />

            <TextView
                android:id="@+id/comment_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:maxLength="35"
                android:textSize="17dp"
                android:text="@{communitymodel.comment_Description}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="14dp"
                android:text="@{communitymodel.date_Posted}"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>